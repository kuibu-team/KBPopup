# Uncomment the next line to define a global platform for your project
platform :ios, '10.0'

target 'KBPopup' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for KBPopup
  pod 'KBDecorationView', :git => 'https://github.com/kuibu-team/KBDecorationView.git', :tag => '1.5'

end

